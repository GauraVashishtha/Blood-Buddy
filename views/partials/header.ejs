            <div class="navbar-collapse text-center collapse " id="collapsenavbar">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="/home" class="nav-link custom-text-color-nav-item">Home</a>
                    </li>
                    <% if(!currentUser){ %>
                    <li class="nav-item">
                        <a href="#" class="nav-link custom-text-color-nav-item" onclick="$('#id01').fadeTo(500,1);$(body).css('overflow','hidden');" role="button">User Login</a>
                    </li>
                    <li class="nav-item">
