    <div id="id01" class="modal" style="z-index:10000">
        <form class="modal-content " action="/auth/login" method="post">
            <div id="form-container1">
                <div class="imgcontainer">
                    <span onclick="$('#id01').fadeOut(500);$(body).css('overflow','unset');" class="close" title="Close Modal">&times;</span>
                    <img src="../img/Users-icon.png" alt="Avatar" class="avatar">
                </div>
                <div class="container login-container">
                    <label for="uname" style="margin-bottom:0;"><b>Username</b></label>
                    <input type="text" placeholder="Enter Username" name="username" required>
                    <label for="psw" style="margin-bottom:0;"><b>Password</b></label>
                    <input type="password" placeholder="Enter Password" name="password" required>
                    <button class="login-button" type="submit">Login</button>
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6"><input type="checkbox" checked="checked" name="remember"> Remember me</div>
                            <div class="col-md-6"> <span class="psw">Forgot <a href="#">password?</a></span></div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div id="id02" class="modal" style="z-index:10000">
        <form class="modal-content " action="/auth/loginHospital" method="post">
            <div id="form-container2" style="z-index:90000">
                <div class="imgcontainer">
                    <span onclick="$('#id02').fadeOut(500);$(body).css('overflow','unset');" class="close" title="Close Modal">&times;</span>
                    <img src="../img/Hospital-Red-icon.png" alt="Avatar" class="avatar">
                </div>
                <div class="container login-container">
                    <label for="uname" style="margin-bottom:0;"><b>Username</b></label>
                    <input type="text" placeholder="Enter Username" name="username" required>
                    <label for="psw" style="margin-bottom:0;"><b>Password</b></label>
                    <input type="password" placeholder="Enter Password" name="password" required>
                    <button class="login-button" type="submit">Login</button>
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6"><input type="checkbox" checked="checked" name="remember"> Remember me</div>
                            <div class="col-md-6"><span class="psw">Forgot <a href="#">password?</a></span></div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <% if(error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show"><button type="button" class="close" data-dismiss="alert">&times;</button>
        <p>
            <%=error %>
        </p>
    </div>
    <% } %>

    <% if(success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show"><button type="button" class="close" data-dismiss="alert">&times;</button>
        <p>
            <%= success %>
        </p>
    </div>
    <% } %>